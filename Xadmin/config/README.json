// Данный файл-образец содержит описание настройки форм и виджетов
// для работы Xadmin

{
// Секция описания конфига, не очень важно
    "name": "category",
    "authors": [
        {
            "name": "alooze",
            "email": "alooze@gmail.com"
        }
    ],

// Секция описания модели данных

    "tables": [    
        {
// Наименование таблицы в БД без префикса MODX
            "name": "xa_categories",
// Наименование класса, содержащего модель данных (ВАЖНО!)
            "ar_model": "Category"            
        }
    ],

// Секция описания свойств таблицы datagrid
    "grid": [
        {
            
// Этот заголовок будет выведен в шапке таблицы            
            "title": "Список категорий",

// Тут можно задать общую ширину таблицы, глядя на ширину каждой колонки ниже
            "style": "width:1000px;height:750px",
            "pagination": "true",
            "rownumbers": "true",
            "fitColumns": "true",
            "singleSelect": "true",
// Опции пагинации и не только
            "options": "pageList:[10,50,100,500]"
        }
    ],

// Секция описания полей модели и их отображения в формах/на сайте
// Данный пример подготовлен для работы с таблицами в jquery easyUI

    "fields": [
        {
            "id": {
// Заголовок в сводной таблице
                "name": "ID категории", 

// Опции вывода в строке таблицы: используем правила написания JSON
                "options": "width1:120"
            },
            "category": {
// Заголовок в сводной таблице
                "name": "Наименование категории", 

// Опции вывода в строке таблицы: используем правила написания JSON
                "options": "width1:300",

// Опции ввода в форме добавления/редактирования:
                "input": "text",

// Обязательно ли заполнение поля в форме
                "required": "true",

// Если нужно только отображение, но не редактирование (?)
                "disabled": "true",

// Если нужна валидация, указываем ее тут
// Пока работают только встроенные механизмы easyUI
                "validate": "minLength[5]",

// Виджет для вывода, пока только text
                "output": "text"

            }
        }
    ]
}