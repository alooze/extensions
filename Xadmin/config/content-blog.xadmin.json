    "tables": [
        {
            "name": "site_content",
            "where": "parent=2",
            "fields": [
                {
                    "id": {"type": "primary"},
                    "title": {"type": "varchar", "size": "150", "edit": "text", "widget": "text", "onsave": "stripTags"},
                    "price": {"type": "varchar", "size": "20", "edit": "text", "widget": "text", "onsave": "stripTags"}
                }
            ]
        }
    ]
}